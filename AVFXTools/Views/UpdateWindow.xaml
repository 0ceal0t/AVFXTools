<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        x:Class="AVFXTools.Views.UpdateWindow"
        xmlns:local="clr-namespace:AVFXTools.Views"
    
        Title="Update"
        WindowStartupLocation="CenterScreen"
        ShowTitleBar="False"
        ResizeMode="NoResize"
    
        Height="128" Width="394"
        mc:Ignorable="d"
    >
    <Grid>
        <StackPanel Margin="10,10,10,10">
            <TextBlock x:Name="textBlock" Text="Checking For Upates..." TextWrapping="Wrap" HorizontalAlignment="Center" Style="{DynamicResource MahApps.Styles.TextBlock}" FontSize="16" Margin="0,20,0,0"/>
            <mah:MetroProgressBar Height="15" Width="188" IsIndeterminate="True" Margin="0,10,0,0"/>

        </StackPanel>
    </Grid>
</mah:MetroWindow>
